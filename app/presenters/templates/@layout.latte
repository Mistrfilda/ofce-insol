{foreach $flashes as $flash}
	<script>
        $.notify({
            message: {$flash->message}
        }, {
            // settings
            type: {$flash->type},
            placement: {
                from: 'top',
                align: 'center'
            },
            delay: 0,
            newest_on_top: true
        });
	</script>
{/foreach}

